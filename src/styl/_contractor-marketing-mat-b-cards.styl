.cb-cards
  border-bottom 1px solid #BAE5F0

.cb-cards__wrapper
  @extend .container
  background #fff
  padding 80px 0

  +respond-to($small)
    padding 64px 0

  +respond-to($xsmall)
    padding 44px 0

.cb-cards__under-text
  @extend .under-text
  margin 32px auto 48px auto
  max-width 760px

  +respond-to($small)
    margin 24px auto 32px auto

  +respond-to($xsmall)
    margin 16px auto 24px auto

.cb-cards__content
  position relative
  display flex
  flex-direction column
  align-items flex-end
  padding-left 358px

  +respond-to($xsmall)
    padding-left 0
    align-items center

.cb-cards__img
  position absolute
  width 510px
  height 368px
  left 62px
  top 20px

  +respond-to($medium)
    width 337px
    height 242px

  +respond-to($small)
    left 0
    top 95px

  +respond-to($xsmall)
    position static
    width 100%
    max-width 100%
    height auto
    margin-bottom 38px
    margin-top 34px

.cb-cards__main
  background: #fff
  box-shadow: 0 23px 28px 0 rgba(0,104,255,0.10)
  border-radius: 6px
  padding 48px

.cb-cards__order
  background: #fff
  box-shadow: 0 23px 28px 0 rgba(0,104,255,0.10)
  border-radius: 6px
  padding 48px
  margin-bottom 24px
  width 458px
  box-sizing border-box
  display flex
  flex-direction column
  align-items center

  +respond-to($medium)
    width 492px

  +respond-to($small)
    width 362px
    padding 24px 16px

  +respond-to($xsmall)
    width 100%

.cb-cards__order-title
  font-size: 24px
  color: #293033
  text-align: center
  line-height: 32px
  font-weight 700
  margin-bottom 12px
  width 100%
  box-sizing border-box

.cb-cards__order-text
  font-size: 16px
  color: #525F66
  text-align: center
  line-height: 32px
  font-weight 400
  margin-bottom 24px
  width 100%
  box-sizing border-box

.cb-cards__order-btn
  @extend .btn-with-lock
  width 360px
  padding 12px

  +respond-to($small)
    width 100%

.cb-cards__promocode
  background: #fff
  box-shadow: 0 23px 28px 0 rgba(0,104,255,0.10)
  border-radius: 6px
  padding 32px 48px
  width 458px
  box-sizing border-box
  display flex
  flex-direction column
  align-items center

  +respond-to($medium)
    width 492px

  +respond-to($small)
    width 362px
    padding 24px 16px

  +respond-to($xsmall)
    width 100%

.cb-cards__promocode-text
  font-size: 16px
  color: #525F66
  text-align: center
  line-height: 32px
  font-weight 400
  width 100%
  box-sizing border-box
  text-align center

.cb-cards__promocode-code
  font-size: 24px
  color: #4C7B93
  letter-spacing: 0
  font-weight bold
  width 100%
  box-sizing border-box
  text-align center
