.redirect
  padding 56px 0 108px 0

  +respond-to($xsmall)
    padding 56px 0 88px 0

.redirect__wrapper
  @extend .container
  display flex
  flex-direction column
  align-items center

.redirect__title
  color: #293033
  font-size: 48px
  font-weight: 600
  line-height: 64px
  text-align: center
  text-shadow: 0 1px 0 0 rgba(0,0,0,0)
  margin-bottom 16px

  +respond-to($small)
    font-size: 40px
    line-height: 52px
    margin-bottom 8px

.redirect__text
  color: #293033
  font-size: 18px
  line-height: 32px
  text-align: center
  text-shadow: 0 1px 2px 0 rgba(15,85,150,0.1)
  font-weight 400
  margin-bottom 16px
  &:last-child
    margin-bottom 0

.redirect__img
  height 100px
  margin-bottom 16px

.redirect__text-link
  @extend .link
  border-bottom 1px dotted #BBDDFC
  &:hover
    border-bottom 1px dotted transparent
