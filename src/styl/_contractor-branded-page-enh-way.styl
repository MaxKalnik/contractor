.enahncify-way
  padding 80px 0
  background #F5FAFC

  +respond-to($small)
    padding 64px 0

  +respond-to($xsmall)
    padding 32px 0 35px 0

.enahncify-way__wrapper
  @extend .container
  background #fff
  padding 48px 80px 80px 80px
  box-shadow: 0 23px 28px 0 rgba(0,104,255,0.10)
  border-radius: 2px

  +respond-to($medium)
    padding 48px 32px

  +respond-to($small)
    padding 32px 24px

  +respond-to($xsmall)
    padding 32px 12px 35px 12px

.enahncify-way__content-block
  margin-top 32px

  +respond-to($small)
    margin-top 24px

  +respond-to($xsmall)
    margin-top 16px
    max-height 685px
    overflow hidden

.enahncify-way__content-block--full
  +respond-to($xsmall)
    max-height 9999px

  & + .enahncify-way__show-more
    +respond-to($xsmall)
      display none

.enahncify-way__text-item
  font-size: 16px
  color: #293033
  line-height: 30px
  font-weight 400
  margin-bottom 30px
  width 100%
  box-sizing border-box
  &:last-child
    margin-bottom 0

  +respond-to($small)
    margin-bottom 20px
    &:last-child
      margin-bottom 0

.enahncify-way__show-more
  position relative
  &:before
    content ''
    width 100%
    height 80px
    position: absolute
    top -80px
    left 0
    background-image linear-gradient(-180deg,rgba(255,255,255,.4) 0,#fff 100%)

.enahncify-way__show-more-btn
  display none
  position relative
  width 138px
  margin-left auto
  margin-right auto
  border 1px solid #68BA62
  font-size: 14px
  color: #68BA62
  line-height: 24px
  font-weight 600
  padding 11px 33px
  border-radius 3px

  +respond-to($xsmall)
    display block
