.offers__items
  +respond-to($small)
    display flex
    justify-content space-between
    flex-direction row
    flex-wrap wrap

.offers__item
  display flex
  position relative
  padding 32px
  background #fff
  border-radius 6px
  border 1px solid #E1EBF0
  box-shadow: 0 2px 6px 0 rgba(177,185,189,0.20)
  justify-content space-between
  align-items center
  box-sizing border-box
  margin-bottom 16px
  &:last-child
    margin-bottom 0

  +respond-to($medium)
    padding 32px 16px 32px 32px

  +respond-to($small)
    width calc(50% - 12px)
    flex-direction column
    padding 32px 16px 16px 16px
    margin-bottom 24px
    &:last-child
      margin-bottom 24px

  +respond-to($xsmall)
    width 100%
    &:last-child
      margin-bottom 0

.offers__item-logo
  +respond-to($small)
    width 100%
    margin-bottom 24px
    display flex
    flex-direction column
    align-items center

.offers__item-text-container
  position: relative
  +respond-to($small)
    width 100%
    padding-bottom 16px
    margin-bottom 15px
    display flex
    flex-direction column
    align-items center
    &:after
      content: ''
      height 1px
      width calc(100% + 32px)
      position: absolute
      bottom 0
      left -16px
      background #dde4e8

.offers__item-text-main
  font-size: 24px
  color: #293033
  line-height: 48px
  font-weight 600
  margin-bottom 8px

  +respond-to($small)
    font-size 18px
    line-height 24px

.offers__item-text-under
  font-size: 12px
  color: #8fa7b3
  line-height: 16px
  font-weight 400

.offers__item-btn-container
  display flex
  flex-direction column
  align-items center

  +respond-to($small)
    width 100%

.offers__item-btn
  @extend .btn-with-lock
  display block
  width 250px
  padding 14px 66px
  font-size 14px
  line-height 16px
  margin-bottom 8px
  box-sizing border-box

  +respond-to($medium)
    padding 14px 30px
    width 176px

  +respond-to($small)
    width 100%

.offers__item-number
  position: absolute
  padding 8px 12px 9px 8px
  left 0
  top 12px
  color: #fff
  font-size: 18px
  color: #fff
  line-height: 16px
  font-weight 700
  background #66B5FF
  border-radius 0 22px 22px 0




.offers.offers--cb
  background #F5FAFC
  padding 50px 0 80px 0

  +respond-to($small)
    padding 32px 0 64px 0

  +respond-to($xsmall)
    padding 8px 0 24px 0

  .offers__wrapper
    @extend .container

  .offers__item
    padding-left 44px

    +respond-to($small)
      padding-left 16px

  .offers__item-logo
    width 140px

    +respond-to($small)
      width auto
      height 80px
      box-sizing border-box

  .offers__item-text-container
    box-sizing border-box
    &:nth-child(3)
      width 180px

      +respond-to($medium)
        width 140px

      +respond-to($small)
        width 100%

    &:nth-child(4)
      width 180px

      +respond-to($medium)
        width 150px

      +respond-to($small)
        width 100%

    &:nth-child(5)
      width 92px

      +respond-to($small)
        width 100%

  .offers__item-btn-container
    width 200px
    flex-shrink 0

  .offers__item-btn
    width 100%
    padding 14px

  .offers__item-text-main
    +respond-to($medium)
      font-size 20px
      line-height 30px

.offers__item.offers__item--zero
  .offers__item-text-container
    box-sizing border-box

    +respond-to($small)
      &:after
        display none

    &:nth-child(3)
      width 595px

      +respond-to($medium)
        width 465px

      +respond-to($small)
        width 100%

  .offers__item-text-main
    font-size 20px
    line-height 30px
    font-weight 400

    +respond-to($medium)
      font-size 18px

    +respond-to($small)
      text-align center
      margin-bottom 44px

    +respond-to($xsmall)
      margin-bottom 32px

  .offers__item-text-under
    font-size 14px
    line-height 24px

    +respond-to($small)
      text-align center

  .offers__item-logo
    margin-right 36px
    position relative

    +respond-to($small)
      margin-right 0
      margin-bottom 0

    +respond-to($xsmall)
      margin-bottom 32px

    &:before
      content ''
      position absolute
      right 15px
      bottom -15px
      width 48px
      height 48px
      background url(images/svg/ic_zero.svg) center no-repeat
      background-size cover

      +respond-to($medium)
        right 15px
        bottom -15px

      +respond-to($small)
        bottom -15px
        right -15px

  .offers__item-text-container
    margin-right 32px

    +respond-to($small)
      margin-right 0

  .offers__item-btn-container
    .offers__item-text-under
      font-size 12px
      line-height 16px

.offers__item.offers__item--pre-approved
  .offers__item-text-container
    box-sizing border-box

    +respond-to($small)
      &:after
        display none

    &:nth-child(3)
      width 575px

      +respond-to($medium)
        width 423px

      +respond-to($small)
        width 100%

  .offers__item-number
    background #F96232
    font-size 16px
    padding 5px 13px 3px 11px

    +respond-to($medium)
      padding 8px 13px 8px 11px

  .offers__item-text-main
    font-size 20px
    line-height 30px
    font-weight 400
    width 100%
    box-sizing border-box

    +respond-to($medium)
      font-size 18px

    +respond-to($small)
      text-align center
      margin-bottom 16px

  .offers__item-btn
    font-size: 28px
    color: #F96232
    line-height: 32px
    font-weight 700
    padding 0
    padding-left 12px
    background none
    position relative
    &:before
      position absolute
      content ''
      width 24px
      height 24px
      left 0
      top 4px
      background url(images/svg/ic_phone_orange.svg) center no-repeat

      +respond-to($small)
        position relative
        display inline-block
        margin-right 12px

  .offers__item-text-under
    font-size: 14px
    color: #8FA7B3
    line-height: 20px
    font-style italic
    width 100%
    box-sizing border-box

    +respond-to($small)
      text-align center

  .offers__item-text-under--custom
    font-size: 18px
    color: #4A4A4A
    line-height: 32px

  .offers__item-btn-container
    width 241px

    +respond-to($small)
      width 100%

  .offers__item-logo
    +respond-to($small)
      margin-top 44px
      margin-bottom 0

.offers__items-headers
  margin-bottom 16px
  display flex

  +respond-to($small)
    display none

.offers__items-header
  font-size: 12px
  color: #8FA7B3
  letter-spacing: 0
  line-height: 16px
  font-weight 600
  text-transform uppercase

  &:nth-child(1)
    width 253px

  &:nth-child(2)
    width 247px

  &:nth-child(3)
    width 247px

  &:nth-child(4)
    width auto

  +respond-to($medium)
    &:nth-child(1)
      width 223px

    &:nth-child(2)
      width 179px

    &:nth-child(3)
      width 187px

    &:nth-child(4)
      width auto



