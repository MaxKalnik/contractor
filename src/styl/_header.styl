$headerNavHeight = 80px

.header
  position: relative
  background: url('images/pic_main.png') bottom no-repeat
  height: 885px
  box-sizing: border-box
  display: flex
  align-items: center
  flex-direction: column
  margin-top: $headerNavHeight
  background-size cover
  @media (-webkit-min-device-pixel-ratio: 2),( min--moz-device-pixel-ratio: 2),(-o-min-device-pixel-ratio: 2/1), (min-device-pixel-ratio: 2),(min-resolution: 192dpi), (min-resolution: 2dppx)
    background: url('images/pic_main@2x.png') bottom no-repeat
    background-size: cover

  +respond-to($medium)
    background: url('images/pic_main_1024.png') bottom no-repeat
    height: 868px
    background-size cover
    @media (-webkit-min-device-pixel-ratio: 2),( min--moz-device-pixel-ratio: 2),(-o-min-device-pixel-ratio: 2/1), (min-device-pixel-ratio: 2),(min-resolution: 192dpi), (min-resolution: 2dppx)
      background: url('images/pic_main_1024@2x.png') bottom no-repeat
      background-size: cover

  +respond-to($small)
    background: url('images/pic_main_768.png') bottom no-repeat
    height: 648px
    background-size cover
    @media (-webkit-min-device-pixel-ratio: 2),( min--moz-device-pixel-ratio: 2),(-o-min-device-pixel-ratio: 2/1), (min-device-pixel-ratio: 2),(min-resolution: 192dpi), (min-resolution: 2dppx)
      background: url('images/pic_main_768@2x.png') bottom no-repeat
      background-size: cover

  +respond-to($xsmall)
    background: url('images/pic_main_768.png') bottom no-repeat
    height: 648px
    background-size cover
    @media (-webkit-min-device-pixel-ratio: 2),( min--moz-device-pixel-ratio: 2),(-o-min-device-pixel-ratio: 2/1), (min-device-pixel-ratio: 2),(min-resolution: 192dpi), (min-resolution: 2dppx)
      background: url('images/pic_main_768@2x.png') bottom no-repeat
      background-size: cover

  +respond-to($xxsmall)
    background: url('images/pic_main_320.png') bottom no-repeat
    height: 592px
    background-size cover
    @media (-webkit-min-device-pixel-ratio: 2),( min--moz-device-pixel-ratio: 2),(-o-min-device-pixel-ratio: 2/1), (min-device-pixel-ratio: 2),(min-resolution: 192dpi), (min-resolution: 2dppx)
      background: url('images/pic_main_320@2x.png') bottom no-repeat
      background-size: cover

.header--active
  +respond-to($small)
    .header__content-top-wrapper
      position: absolute
      top: -($headerNavHeight)

.header--short
  background: none
  height: 0
  @media (-webkit-min-device-pixel-ratio: 2),( min--moz-device-pixel-ratio: 2),(-o-min-device-pixel-ratio: 2/1), (min-device-pixel-ratio: 2),(min-resolution: 192dpi), (min-resolution: 2dppx)
    background: none

  +respond-to($medium)
    background: none
    height: 0
    @media (-webkit-min-device-pixel-ratio: 2),( min--moz-device-pixel-ratio: 2),(-o-min-device-pixel-ratio: 2/1), (min-device-pixel-ratio: 2),(min-resolution: 192dpi), (min-resolution: 2dppx)
      background: none

  +respond-to($small)
    background: none
    height: 0
    @media (-webkit-min-device-pixel-ratio: 2),( min--moz-device-pixel-ratio: 2),(-o-min-device-pixel-ratio: 2/1), (min-device-pixel-ratio: 2),(min-resolution: 192dpi), (min-resolution: 2dppx)
      background: none

  +respond-to($xsmall)
    background: none
    height: 0
    @media (-webkit-min-device-pixel-ratio: 2),( min--moz-device-pixel-ratio: 2),(-o-min-device-pixel-ratio: 2/1), (min-device-pixel-ratio: 2),(min-resolution: 192dpi), (min-resolution: 2dppx)
      background: none

  +respond-to($xxsmall)
    background: none
    height: 0
    @media (-webkit-min-device-pixel-ratio: 2),( min--moz-device-pixel-ratio: 2),(-o-min-device-pixel-ratio: 2/1), (min-device-pixel-ratio: 2),(min-resolution: 192dpi), (min-resolution: 2dppx)
      background: none

.header__content-top-wrapper
  width: 100%
  box-shadow: 0 1px 8px 0 rgba(82,95,102,0.10)
  position: fixed
  top: 0
  left 0
  background: rgba(255,255,255, 0.95)
  z-index: 3
  +respond-to($small)
    position: absolute
    top: -($headerNavHeight)

.header__content-top
  display: flex
  height: $headerNavHeight
  align-items: center
  @extend .container

.header__main
  @extend .container
  padding-top: 134px
  display: flex
  flex-direction: column
  align-items: center
  z-index: 1
  +respond-to($medium)
    padding-top: 96px

  +respond-to($small)
    padding-top: 72px

  +respond-to($xsmall)
    padding-top: 32px

.header__title
  width 100%
  box-sizing border-box
  text-align: center
  margin-bottom: 16px
  font-size: 58px
  color: #282828
  text-align: center
  line-height: 64px
  +respond-to($small)
    font-size: 40px
    line-height: 48px

.header__under-title
  width 100%
  box-sizing border-box
  text-align: center
  font-size: 24px
  line-height: 32px
  font-weight: 600
  color: #293033
  margin-bottom: 44px
  +respond-to($small)
    margin-bottom: 32px

  +respond-to($xsmall)
    margin-bottom: 24px
    font-size: 18px
    line-height: 24px

.header__main-link
  font-family: 'Roboto'
  font-size: 32px
  line-height: 32px
  font-weight: 900
  color #282828
  background: -webkit-linear-gradient(-45deg, #4d4d4d, #000000)
  -webkit-text-fill-color: transparent
  -webkit-background-clip: text

  +respond-to($small)
    font-size: 28px

  +respond-to($small)
    font-size: 24px

.header__main-logo
  margin-right: 40px
  +respond-to($medium)
    margin-right: 24px

.header__btn-wrapper
  width 376px
  position relative
  +respond-to($xsmall)
    width 100%

  img
    @extend .btn-with-lock-img

  +respond-to($xsmall)
    width 100%

.header__btn
  @extend .btn-with-lock
  display: inline-block

.header__features
  @extend .container
  margin-top: auto
  margin-bottom: 48px
  display: flex
  flex-direction: row
  justify-content: space-around
  z-index: 2

  +respond-to($xsmall)
    flex-direction: column
    margin-bottom: 24px
    align-items: center

.header__features-item
  display: flex
  flex-direction: column
  align-items: center

  +respond-to($small)
    width: 192px

  +respond-to($xsmall)
    width: 100%
    justify-content: flex-start
    margin-bottom: 16px
    flex-direction: row
    align-items: center
    &:last-child
      margin-bottom: 0

.header__features-item-text
  font-size: 16px
  line-height: 24px
  font-weight: 500
  color: #ffffff
  text-align: center

  +respond-to($xsmall)
    text-align: left

.header__features-icon
  width: 56px
  height: 56px
  margin-bottom: 16px

  +respond-to($xsmall)
    width: 48px
    height: 48px
    margin-right: 16px
    margin-bottom: 0

.header__contacts
  margin-left: auto
  position: static

.header__contacts--menu-active
  +respond-to($small)
    position: absolute
    top: 38px
    right: 32px
    z-index: 3

  +respond-to($xsmall)
    top: 20px
    right: 16px
    .header__contacts-tel-link
      display: block
      margin-right: 0
      &:before
        top: 3px

    .header__contacts-btn-get-started
      display: none

.header__contacts-tel-link
  @extend .tel-btn
  margin-right: 32px
  +respond-to($medium)
    margin-right: 24px

  +respond-to($xsmall)
    display: none

.header__contacts-btn-get-started
  @extend .green-btn
  display: inline-block
  +respond-to($xsmall)
    padding: 8px 16px

.header__mask
  position: absolute
  bottom: 0
  left: 0
  height: 430px
  width: 100%
  opacity: 0.51
  background-image: linear-gradient(-180deg, rgba(0,0,0,0.00) 53%, rgba(0,0,0,0.62) 63%, rgba(0,0,0,0.67) 77%, rgba(0,0,0,0.72) 89%, #000000 100%)

  +respond-to($small)
    background-image: linear-gradient(-180deg, rgba(0,0,0,0.00) 33%, rgba(0,0,0,0.62) 63%, rgba(0,0,0,0.67) 77%, rgba(0,0,0,0.72) 89%, #000000 100%)

.header__contacts-btn-get-started--scroll
  background: #17B548
  border: 1px solid transparent
  color: #fff

.header--contractor
  background: url('images/contractor_main_header.png') bottom no-repeat
  background-size cover
  height 600px
  @media (-webkit-min-device-pixel-ratio: 2),( min--moz-device-pixel-ratio: 2),(-o-min-device-pixel-ratio: 2/1), (min-device-pixel-ratio: 2),(min-resolution: 192dpi), (min-resolution: 2dppx)
    background: url('images/contractor_main_header@2x.png') bottom no-repeat
    background-size: cover

  +respond-to($medium)
    background: url('images/contractor_main_header_1024.png') bottom no-repeat
    height 600px
    background-size cover
    @media (-webkit-min-device-pixel-ratio: 2),( min--moz-device-pixel-ratio: 2),(-o-min-device-pixel-ratio: 2/1), (min-device-pixel-ratio: 2),(min-resolution: 192dpi), (min-resolution: 2dppx)
      background: url('images/contractor_main_header_1024@2x.png') bottom no-repeat
      background-size: cover

  +respond-to($small)
    background: url('images/contractor_main_header_768.png') bottom no-repeat
    height 600px
    background-size cover
    @media (-webkit-min-device-pixel-ratio: 2),( min--moz-device-pixel-ratio: 2),(-o-min-device-pixel-ratio: 2/1), (min-device-pixel-ratio: 2),(min-resolution: 192dpi), (min-resolution: 2dppx)
      background: url('images/contractor_main_header_768@2x.png') bottom no-repeat
      background-size: cover

  +respond-to($xsmall)
    background: url('images/contractor_main_header_768.png') bottom no-repeat
    min-height 617px
    height auto
    background-size cover
    @media (-webkit-min-device-pixel-ratio: 2),( min--moz-device-pixel-ratio: 2),(-o-min-device-pixel-ratio: 2/1), (min-device-pixel-ratio: 2),(min-resolution: 192dpi), (min-resolution: 2dppx)
      background: url('images/contractor_main_header_768@2x.png') bottom no-repeat
      background-size: cover

  +respond-to($xxsmall)
    background: url('images/contractor_main_header_320.png') bottom no-repeat
    min-height 617px
    height auto
    background-size cover
    @media (-webkit-min-device-pixel-ratio: 2),( min--moz-device-pixel-ratio: 2),(-o-min-device-pixel-ratio: 2/1), (min-device-pixel-ratio: 2),(min-resolution: 192dpi), (min-resolution: 2dppx)
      background: url('images/contractor_main_header_320@2x.png') bottom no-repeat
      background-size: cover

.header__main--contractor
  padding 80px 0 160px 0
  align-items flex-start

  +respond-to($small)
    padding 62px 0 250px 0

  +respond-to($xxsmall)
    padding 32px 0 197px 0

.header__title--contractor
  color #005871
  font-size 56px
  line-height 72px
  text-align left
  margin-bottom 48px

  +respond-to($small)
    margin-bottom 32px
    font-size 40px
    line-height 56px

  +respond-to($xsmall)
    margin-bottom 24px
    font-size 36px
    line-height 44px

.header__contractor-features
  display flex
  margin-bottom 80px

  +respond-to($small)
    margin-bottom 56px

  +respond-to($xsmall)
    flex-direction column
    margin-bottom 32px

.header__contractor-features-item
  position relative
  font-size: 16px
  color: #006682
  letter-spacing: 0
  line-height: 24px
  font-weight 600
  padding-left 28px
  text-transform uppercase
  margin-right 80px

  +respond-to($xsmall)
    margin-right 0
    margin-bottom 10px
    &:last-child
      margin-bottom 0

  &:last-child
    margin-right 0


  &:before
    content ''
    width 12px
    height 12px
    position absolute
    left 0
    top 5px
    background url(images/svg/checkmark_blue_contractor.svg) center no-repeat

.header__btn-wrapper--contractor
  margin-left 0
  width 360px
  position relative

  +respond-to($xsmall)
    width 100%
    max-width 288px

  img
    @extend .btn-with-lock-img

    +respond-to($small)
      left 50%
      transform translateX(-50%)
      top auto
      bottom -165px

    +respond-to($xsmall)
      bottom -145px
